<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dd2a4860"
    tools:context="com.nutritex.nutritex.Login">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="513dp"
        android:layout_marginBottom="16dp"
        android:background="#dd2a4860"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="8dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="111dp"
            app:srcCompat="@drawable/logoapp" />

        <EditText
            android:id="@+id/etRegistro"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textAllCaps="true"
            android:textColor="@android:color/background_light" />

        <EditText
            android:id="@+id/etContraseÃ±a"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textAutoCorrect|textPassword"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/btInicioSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/actionModeSplitBackground"
            android:textColor="@android:color/background_light"
            android:onClick="login"
            android:text="Iniciar sesion" />

        <Button
            android:id="@+id/btRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#dd2a4860"
            android:onClick="registro"
            android:text="No tienes una cuenta?, registrate aqui"
            android:textColor="@android:color/background_light" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>